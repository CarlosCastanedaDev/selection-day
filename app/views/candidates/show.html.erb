<div class="flex flex-col justify-center">
  <p style="color: green"><%= notice %></p>
  <%= render @candidate %>
  <div class="flex justify-center space-x-8 my-16">
    <%= link_to "Edit this candidate", edit_candidate_path(@candidate), class: "btn btn-primary" %>
    <%= link_to "Back to candidates", candidates_path, class: "btn btn-primary" %>
    <%= button_to "Destroy this candidate", @candidate, method: :delete, class: "btn btn-primary" %>
  </div>
